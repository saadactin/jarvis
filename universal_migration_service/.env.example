# ============================================================================
# JARVIS BACKEND - ENVIRONMENT VARIABLES CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual credentials
# DO NOT commit .env to version control (it's in .gitignore)

# ============================================================================
# MAIN BACKEND CONFIGURATION (jarvis-main)
# ============================================================================
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
HOST=0.0.0.0
PORT=5009
DEBUG=True

# Main Backend Database (PostgreSQL) - Used by jarvis-main for user/auth/operations
DATABASE_URL=postgresql://username:password@localhost:5432/jarvis_db

# ============================================================================
# POSTGRESQL CONFIGURATION (Source/Destination)
# ============================================================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=your_database_name
PG_USERNAME=postgres
PG_PASSWORD=your_postgres_password

# ============================================================================
# MYSQL CONFIGURATION (Source/Destination)
# ============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_mysql_database
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_mysql_password

# ============================================================================
# SQL SERVER CONFIGURATION (Source)
# ============================================================================
# For Named Instance: use SERVER=hostname\instancename (e.g., localhost\SQLEXPRESS)
# For Default Instance: use SERVER=hostname (e.g., localhost)
SQL_SERVER_SERVER=localhost\SQLEXPRESS
SQL_SERVER_DATABASE=your_sql_server_database
SQL_SERVER_USERNAME=sa
SQL_SERVER_PASSWORD=your_sql_server_password
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server

# For Windows Authentication (leave username/password empty or set to 'windows'):
# SQL_SERVER_USERNAME=windows
# SQL_SERVER_PASSWORD=windows
# OR
# SQL_SERVER_USERNAME=
# SQL_SERVER_PASSWORD=

# ============================================================================
# CLICKHOUSE CONFIGURATION (Destination)
# ============================================================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASS=your_clickhouse_password
CLICKHOUSE_DB=your_clickhouse_database

# ============================================================================
# ZOHO CRM API CONFIGURATION (Source)
# ============================================================================
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_API_DOMAIN=https://www.zohoapis.com
# Options: https://www.zohoapis.com (US)
#          https://www.zohoapis.in (India)
#          https://www.zohoapis.eu (Europe)
#          https://www.zohoapis.com.au (Australia)
#          https://www.zohoapis.jp (Japan)

# Zoho to ClickHouse specific (if using old zoho_service)
ZOHO_CLICKHOUSE_HOST=localhost
ZOHO_CLICKHOUSE_USER=default
ZOHO_CLICKHOUSE_PASS=your_clickhouse_password
ZOHO_CLICKHOUSE_DATABASE=zoho_crm

# ============================================================================
# SERVICE URLS (For Database Master Registry)
# ============================================================================
# These are the URLs where your microservices are running
POSTGRES_SERVICE_URL=http://localhost:5001
ZOHO_SERVICE_URL=http://localhost:5002
SQL_POSTGRES_SERVICE_URL=http://localhost:5003
UNIVERSAL_MIGRATION_SERVICE_URL=http://localhost:5010

# ============================================================================
# NOTES
# ============================================================================
# 1. All passwords and tokens should be kept secure and never committed to git
# 2. Update DATABASE_URL with your actual PostgreSQL connection string
# 3. For production, set FLASK_ENV=production and DEBUG=False
# 4. Change SECRET_KEY and JWT_SECRET_KEY to strong random strings
# 5. Port numbers can be customized based on your setup
# 6. SQL Server: Use backslash for named instances (e.g., localhost\SQLEXPRESS)
# 7. SQL Server: For Windows Auth, leave username/password empty or set to 'windows'
