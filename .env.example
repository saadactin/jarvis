# ============================================================================
# Jarvis Migration System - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# Main Backend Configuration
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/backend_db
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
DEBUG=False
HOST=0.0.0.0
PORT=5009

# ============================================================================
# Universal Migration Service Configuration
# ============================================================================
UNIVERSAL_MIGRATION_SERVICE_PORT=5011
UNIVERSAL_MIGRATION_SERVICE_HOST=localhost

# ============================================================================
# Azure DevOps Configuration (for testing)
# ============================================================================
DEVOPS_ACCESS_TOKEN=your-azure-devops-access-token
DEVOPS_ORGANIZATION=your-organization-name
DEVOPS_API_VERSION=7.1

# ============================================================================
# ClickHouse Configuration (for testing)
# ============================================================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-clickhouse-password
CLICKHOUSE_DATABASE=default

# ============================================================================
# PostgreSQL Configuration (for testing)
# ============================================================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=your_database
PG_USERNAME=your_username
PG_PASSWORD=your_password

# ============================================================================
# MySQL Configuration (for testing)
# ============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_password

# ============================================================================
# SQL Server Configuration (for testing)
# ============================================================================
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=your_database
SQLSERVER_USERNAME=sa
SQLSERVER_PASSWORD=your_password

# ============================================================================
# Zoho CRM Configuration (for testing)
# ============================================================================
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_API_DOMAIN=https://www.zohoapis.com

# ============================================================================
# Test User Credentials (for test scripts)
# ============================================================================
TEST_USERNAME=test_user
TEST_PASSWORD=test_password

# ============================================================================
# Backend Service URLs (for test scripts)
# ============================================================================
BACKEND_URL=http://localhost:5009
UNIVERSAL_SERVICE_URL=http://localhost:5011
